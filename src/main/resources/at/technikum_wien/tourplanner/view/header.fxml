<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="headerPane"
            fx:controller="at.technikum_wien.tourplanner.view.HeaderController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../style/header.css">

    <children>
        <HBox fx:id="mainHeader"
              prefHeight="100.0"
              spacing="10.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <padding>
                <Insets top="15.0" />
            </padding>
            <children>
                <ImageView fx:id="logoImage"
                           fitHeight="80.0"
                           fitWidth="80.0"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/IMG_0034.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </ImageView>

                <Label fx:id="titleLabel"
                       text="TOUR PLANNER"
                       textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets top="25.0"/>
                    </HBox.margin>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <HBox fx:id="searchBox"
                      spacing="10.0"
                      alignment="CENTER_RIGHT">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                    <TextField fx:id="searchField"
                               maxWidth="250.0"
                               promptText="search tours..."/>
                    <Button fx:id="searchButton"
                            mnemonicParsing="false"
                            text="Search"/>
                </HBox>
            </children>
        </HBox>

        <HBox fx:id="subHeader"
              prefHeight="30.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="100.0"
              alignment="CENTER_RIGHT">
            <padding>
                <Insets right="20.0"/>
            </padding>

            <MenuButton fx:id="reportButton"
                        text="REPORT"
                        textFill="#f5f4f0">
                <items>
                    <MenuItem text="SUMMARIZE-REPORT" onAction="#generateSummaryReport"/>
                </items>
            </MenuButton>
        </HBox>

    </children>
</AnchorPane>
