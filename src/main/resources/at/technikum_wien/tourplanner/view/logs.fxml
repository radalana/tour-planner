<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="505.0" prefWidth="992.0"
            style="-fx-background-color: #C8EADF;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.technikum_wien.tourplanner.view.TourLogController">
    <HBox spacing="20" alignment="CENTER"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          style="-fx-padding: 30;">

        <TableView fx:id="logsTableView"
                   prefHeight="445.0"
                   prefWidth="650.0"
                   style="-fx-background-color: #F5F4F0;
                          -fx-border-color: #C8B8A7;
                          -fx-border-insets: 0;
                          -fx-background-insets: 0;
                          -fx-padding: 0;">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="100" text="Date"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
                <TableColumn fx:id="commentColumn" prefWidth="150" text="Comment"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
                <TableColumn fx:id="difficultyColumn" prefWidth="100" text="Difficulty"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
                <TableColumn fx:id="distanceColumn" prefWidth="100" text="Distance"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
                <TableColumn fx:id="durationColumn" prefWidth="100" text="Total Time"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
                <TableColumn fx:id="ratingColumn" prefWidth="100" text="Rating"
                             style="-fx-background-color: #F5F4F0;
                                    -fx-text-fill: #292929;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #E4D8D1;"/>
            </columns>
        </TableView>
        <fx:include source="addLog.fxml"/>
    </HBox>
</AnchorPane>

