<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<StackPane fx:id="newTourContainer"
           alignment="CENTER"
           style="-fx-background-color: rgba(0, 0, 0, 0.5);"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="at.technikum_wien.tourplanner.view.NewTourController">

    <VBox alignment="TOP_CENTER"
          spacing="15"
          prefWidth="420"
          prefHeight="750"
          style="-fx-background-color: #F5F4F0;
                 -fx-padding: 25px;">

        <!-- header with import button -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label text="NEW TOUR"
                   style="-fx-font-size: 30px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1C1C1C;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button onAction="#handleImport" text="+"
                    style="-fx-background-color: #C8EADF;
                           -fx-text-fill: white;
                           -fx-font-size: 24px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20px;
                           -fx-border-radius: 20px;
                           -fx-padding: 10px;"
                    prefWidth="40" prefHeight="40">
            </Button>
        </HBox>

        <!--input Fields -->
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="TOUR NAME" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextField fx:id="nameTextField"
                       style="-fx-background-color: #DEDBD6;
                              -fx-border-radius: 25px;
                              -fx-background-radius: 25px;
                              -fx-padding: 12px;
                              -fx-font-size: 16px;"
                       prefWidth="380"/>

            <Label text="TOUR DESCRIPTION" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextArea fx:id="descriptionTextArea"
                      prefHeight="80"
                      style="-fx-background-color: #DEDBD6;
                             -fx-border-radius: 25px;
                             -fx-background-radius: 25px;
                             -fx-padding: 12px;
                             -fx-font-size: 16px;"
                      prefWidth="380"/>

            <!-- from and to-->
            <HBox spacing="10">
                <VBox>
                    <Label text="FROM" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="fromTextField"
                               style="-fx-background-color: #DEDBD6;
                                      -fx-border-radius: 25px;
                                      -fx-background-radius: 25px;
                                      -fx-padding: 12px;
                                      -fx-font-size: 16px;"
                               prefWidth="180"/>
                </VBox>
                <VBox>
                    <Label text="TO" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="toTextField"
                               style="-fx-background-color: #DEDBD6;
                                      -fx-border-radius: 25px;
                                      -fx-background-radius: 25px;
                                      -fx-padding: 12px;
                                      -fx-font-size: 16px;"
                               prefWidth="180"/>
                </VBox>
            </HBox>

            <Label text="TRANSPORT TYPE" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <ComboBox fx:id="transportTypeComboBox"
                      promptText="Select Transport"
                      style="-fx-background-color: #DEDBD6;
                             -fx-border-radius: 25px;
                             -fx-background-radius: 25px;
                             -fx-padding: 12px;
                             -fx-font-size: 16px;"
                      prefWidth="380">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Walking"/>
                        <String fx:value="Bicycle"/>
                        <String fx:value="Car"/>
                        <String fx:value="Public Transport"/>
                        <String fx:value="Train"/>
                        <String fx:value="Airplane"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!--distance & estimated Time -->
            <HBox spacing="10">
                <VBox>
                    <Label text="DISTANCE" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="distanceTextField"
                               style="-fx-background-color: #DEDBD6;
                                      -fx-border-radius: 25px;
                                      -fx-background-radius: 25px;
                                      -fx-padding: 12px;
                                      -fx-font-size: 16px;"
                               prefWidth="180"/>
                </VBox>
                <VBox>
                    <Label text="ESTIMATED TIME (H)" style="-fx-text-fill: #6C6C6C; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="estTimeTextField"
                               style="-fx-background-color: #DEDBD6;
                                      -fx-border-radius: 25px;
                                      -fx-background-radius: 25px;
                                      -fx-padding: 12px;
                                      -fx-font-size: 16px;"
                               prefWidth="180"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Save , cancel-->
        <VBox spacing="10" alignment="CENTER">
            <Button onAction="#saveNewTour" text="SAVE"
                    prefHeight="50" prefWidth="220"
                    style="-fx-background-color: #C8EADF;
                           -fx-text-fill: black;
                           -fx-background-radius: 25px;
                           -fx-border-radius: 25px;
                           -fx-font-size: 18px;
                           -fx-font-weight: bold;"/>

            <Button onAction="#closeNewTour" text="CANCEL"
                    prefHeight="50" prefWidth="220"
                    style="-fx-background-color: #F8F6F2;
                           -fx-text-fill: black;
                           -fx-background-radius: 25px;
                           -fx-border-radius: 25px;
                           -fx-font-size: 18px;
                           -fx-font-weight: bold;
                           -fx-border-color: #C8EADF;
                           -fx-border-width: 2px;"/>
        </VBox>

    </VBox>
</StackPane>